{
    "extends": "../tslint.json",
    "linterOptions": {
        "exclude": [
            "**/node_modules/**"
        ]
    },
    "rules": {
        "radix": false,
        "max-line-length": false,
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}
